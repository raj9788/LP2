<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PS 5</title>
  </head>
  <body>
    <form method="get" action="/">
      <button type="submit">Add songs</button>
    </form>
    <% if(songs!=null) { %>
    <table border="1px">
      <thead>
        <tr>
          <th>Song Name</th>
          <th>Film</th>
          <th>Music Director</th>
          <th>Singer</th>
          <th>Actor</th>
          <th>Actress</th>
          <th>Delete</th>
          <th>Update</th>
        </tr>
      </thead>
      <tbody>
        <% songs.forEach((song)=>{ %>
        <tr>
          <td><%= song.songname %></td>
          <td><%= song.film %></td>
          <td><%= song.music_director %></td>
          <td><%= song.singer %></td>
          <td><%= song.actor %></td>
          <td><%= song.actress %></td>
          <td>
            <form action="/deletesong/<%= song._id %>" method="post">
              <button type="submit">Delete</button>
            </form>
          </td>
          <td>
            <form action="/updatesong/<%= song._id %>" method="post">
              <label for="actor">Actor: </label>
              <input id="actor" name="actor" type="text" required />
              <br />
              <label for="actress">Actress: </label>
              <input id="actress" name="actress" type="text" required />
              <br />

              <button type="submit">Save</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
    <p>count : <%= count %></p>
  </body>
</html>
